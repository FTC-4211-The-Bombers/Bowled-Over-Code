#pragma config(Hubs,  S1, HTMotor,  HTMotor,  HTMotor,  HTServo)
#pragma config(Sensor, S4,     HTDIR,               sensorI2CCustom)
#pragma config(Motor,  mtr_S1_C1_1,     right,         tmotorNormal, openLoop, reversed)
#pragma config(Motor,  mtr_S1_C1_2,     left,          tmotorNormal, openLoop)
#pragma config(Motor,  mtr_S1_C2_1,     backslift,     tmotorNormal, openLoop, reversed)
#pragma config(Motor,  mtr_S1_C2_2,     frontslift,    tmotorNormal, openLoop, reversed)
#pragma config(Motor,  mtr_S1_C3_1,     crate,         tmotorNormal, openLoop, reversed)
#pragma config(Motor,  mtr_S1_C3_2,     ball,          tmotorNormal, openLoop, reversed)
#pragma config(Servo,  srvo_S1_C4_1,    crateservo,           tServoStandard)
#pragma config(Servo,  srvo_S1_C4_2,    ballservo,            tServoStandard)
#pragma config(Servo,  srvo_S1_C4_3,    holddownservo,        tServoStandard)
#pragma config(Servo,  srvo_S1_C4_4,    servo4,               tServoNone)
#pragma config(Servo,  srvo_S1_C4_5,    servo5,               tServoNone)
#pragma config(Servo,  srvo_S1_C4_6,    servo6,               tServoNone)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

#include "joystickdriver.c"
#include "C:\Program Files (x86)\Robotics Academy\ROBOTC for Mindstorms\Sample Programs\NXT\3rd Party Sensor Drivers\drivers\common.h"
#include "C:\Program Files (x86)\Robotics Academy\ROBOTC for Mindstorms\Sample Programs\NXT\3rd Party Sensor Drivers\drivers\HTDIR-driver.h"


task main()
{
  waitForStart();
  motor[left]=30;
  motor[right]=30;
  wait1Msec(1000);
  motor[ball]=75;
  wait1Msec(200);
  motor[ball]=0;
  wait1Msec(1500);
  motor[left]=0;
  motor[right]=0;
  wait1Msec(1500);
  motor[ball]=-35;
  wait1Msec(450);
  motor[ball]=0;
  while (1)
  {
    if (HTDIRreadACDir(HTDIR)<5)
    {
      motor[left]=-100;
      motor[right]=100;
    }
    else if (HTDIRreadACDir(HTDIR)>5)
    {
      motor[left]=100;
      motor[right]=-100;
    }
    else if (HTDIRreadACDir(HTDIR)==5)
    {
      motor[left]=100;
      motor[right]=100;
    }
    else
    {
      motor[left]=100;
      motor[right]=-100;
      wait1Msec(1000);
    }

  }
}
