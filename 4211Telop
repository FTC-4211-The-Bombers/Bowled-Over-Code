#pragma config(Hubs,  S1, HTMotor,  HTMotor,  HTMotor,  HTServo)
#pragma config(Motor,  mtr_S1_C1_1,     right,         tmotorNormal, openLoop, reversed)
#pragma config(Motor,  mtr_S1_C1_2,     left,          tmotorNormal, openLoop)
#pragma config(Motor,  mtr_S1_C2_1,     backslift,     tmotorNormal, openLoop, reversed)
#pragma config(Motor,  mtr_S1_C2_2,     frontslift,    tmotorNormal, openLoop, reversed)
#pragma config(Motor,  mtr_S1_C3_1,     motorH,        tmotorNone, openLoop)
#pragma config(Motor,  mtr_S1_C3_2,     ball,          tmotorNormal, openLoop, reversed)
#pragma config(Servo,  srvo_S1_C4_1,    servo1,               tServoNone)
#pragma config(Servo,  srvo_S1_C4_2,    ballservo,            tServoStandard)
#pragma config(Servo,  srvo_S1_C4_3,    servo3,               tServoNone)
#pragma config(Servo,  srvo_S1_C4_4,    servo4,               tServoNone)
#pragma config(Servo,  srvo_S1_C4_5,    servo5,               tServoNone)
#pragma config(Servo,  srvo_S1_C4_6,    servo6,               tServoNone)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

#include "joystickdriver.c"


task main()
{
  servo[ballservo]=0;
  motor[left]=0;
  motor[right]=0;
  motor[ball]=0;
  motor[frontslift]=0;
  motor[backslift]=0;
  servoChangeRate[ballservo]=0;
  while (1)
  {
    getJoystickSettings(joystick);

    motor[left]=-joystick.joy1_y1;
    motor[right]=-joystick.joy1_y2;
    // scissor lift control
    if (joystick.joy2_TopHat==0)
    {
      motor[frontslift]=30;
      motor[backslift]=30;
    }
    else if (joystick.joy2_TopHat==1)
    {
      motor[frontslift]=15;
      motor[backslift]=30;
    }
    else if (joystick.joy2_TopHat==2)
    {
      motor[frontslift]=-30;
      motor[backslift]=30;
    }
    else if (joystick.joy2_TopHat==3)
    {
      motor[frontslift]=-30;
      motor[backslift]=-15;
    }
    else if (joystick.joy2_TopHat==4)
    {
      motor[frontslift]=-30;
      motor[backslift]=-30;
    }
    else if (joystick.joy2_TopHat==5)
    {
      motor[frontslift]=-15;
      motor[backslift]=-30;
    }
    else if (joystick.joy2_TopHat==6)
    {
      motor[frontslift]=30;
      motor[backslift]=-30;
    }
    else if (joystick.joy2_TopHat==7)
    {
      motor[frontslift]=30;
      motor[backslift]=15;
    }
    else if (joy2Btn(1))
    {
      motor[frontslift]=15;
      motor[backslift]=-15;
    }
    else if (joy2Btn(3))
    {
      motor[frontslift]=-15;
      motor[backslift]=15;
    }
    else
    {
      motor[frontslift]=0;
      motor[backslift]=0;
    }

    // ball grabber control
    if (joy1Btn(6)&&joy1Btn(8))
    {
      servo[ballservo]=180;
    }
    else if (joy1Btn(6))
    {
      servo[ballservo]=0;
    }
    else if (joy1Btn(8))
    {
      servo[ballservo]=180;
    }
    else
    {
    }

    // ball arm control
    if (joy1Btn(4))
    {
      motor[ball]=50;
    }
    else if (joy1Btn(2))
    {
      motor[ball]=-25;
    }
    else
    {
      motor[ball]=0;
    }
  }
}
